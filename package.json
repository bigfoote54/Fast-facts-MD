{
  "name": "fast-facts-md",
  "version": "1.0.0",
  "description": "AI Study Assistant for Medical & Nursing Students",
  "private": true,
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "lint": "pnpm -r run lint",
    "type-check": "pnpm -r run type-check",
    "test": "pnpm -r run test",
    "setup": "pnpm install --frozen-lockfile && cd frontend && npx playwright install webkit && echo '🎉 Ready'",
    "dev": "cd frontend && pnpm start",
    "build": "cd frontend && pnpm run export",
    "start": "cd frontend && pnpm start --web"
  },
  "devDependencies": {
    "@playwright/test": "^1.48.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "prettier": "^3.4.2",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0"
}